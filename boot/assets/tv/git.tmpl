{{define "git"}}
<!DOCTYPE html>
<html lang="en" class="color-toggle-light" color-mode="light">
{{template "head"}}

<body>
{{template "svg-sprite"}}
<div class="wrapper dark-mode-dim">
  {{template "header"}}
  <main class="container flex flex-even">
    {{template "aside"}}
    <!--- main page --->
    <div class="gdoc-page">
      <!--- header nav --->
      <div class="gdoc-page__header flex flex-wrap justify-between">
        <div>
          <svg class="icon gdoc_path hidden-mobile"><use xlink:href="#gdoc_path"></use></svg>
          <ol class="breadcrumb">
            <li><a href="/rk/v1/tv/application"><span itemprop="name">Application</span></a></li>
            <li>/</li>
            <li><span itemprop="name">Git</span></li>
          </ol>
        </div>
      </div>
      <!--- content --->
      <article class="gdoc-markdown">
        <!--- title --->
        <div class="gdoc-page__anchorwrap">
          <h1 id="example"> Git </h1>
        </div>
        <!--- content --->
        <div class="gdoc-tabs">
          <!--- Git Info --->
          <input type="radio" class="gdoc-tabs__control hidden" name="tabs-uniqueid" id="tabs-uniqueid-0" checked="checked">
          <label for="tabs-uniqueid-0" class="gdoc-tabs__label"> Git </label>
          <div class="gdoc-tabs__content">
            <div class="gdoc-columns flex flex-wrap">
              <!--- Name --->
              <div class="gdoc-columns__content gdoc-markdown--nested flex-even">
                <div class="gdoc-page__anchorwrap"><h2 id="left"> Package </h2></div>
                <p><a target="_blank" href="{{ .Url }}">{{ .Package }}</a></p>
              </div>
              <!--- Version --->
              <div class="gdoc-columns__content gdoc-markdown--nested flex-even">
                <div class="gdoc-page__anchorwrap"><h2 id="mid-content"> Branch </h2></div>
                <p>{{ .Branch }}</p>
              </div>
              <div class="gdoc-columns__content gdoc-markdown--nested flex-even">
                <div class="gdoc-page__anchorwrap"><h2 id="mid-content"> Tag </h2></div>
                <p>{{ .Tag }}</p>
              </div>
            </div>
          </div>
        </div>
        <!--- title --->
        <div class="gdoc-page__anchorwrap">
          <h1 id="api"> Current Commits </h1>
        </div>
        <!--- content --->
        <table>
          <thead>
            <tr>
              <th>Id</th>
              <th>Subject</th>
              <th>Name</th>
              <th>Date</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><a target="_blank" href="{{ .Url }}/commit/{{ .CommitId }}">{{ .CommitIdAbbr }}</a></td>
              <td>{{ .CommitSub }}</td>
              <td>{{ .CommitterName }}</td>
              <td>{{ .CommitDate }}</td>
            </tr>
          </tbody>
        </table>
      </article>
    </div>
  </main>
  {{template "footer"}}
</div>
</body>
</html>
{{end}}
