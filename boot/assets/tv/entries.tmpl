{{define "entries"}}
<!DOCTYPE html>
<html lang="en" class="color-toggle-light" color-mode="light">
{{template "head"}}

<body>
{{template "svg-sprite"}}
<div class="wrapper dark-mode-dim">
  {{template "header"}}
  <main class="container flex flex-even">
    {{template "aside"}}
    <!--- main page --->
    <div class="gdoc-page">
      <!--- header nav --->
      <div class="gdoc-page__header flex flex-wrap justify-between" itemprop="breadcrumb">
        <div>
          <svg class="icon gdoc_path hidden-mobile"><use xlink:href="#gdoc_path"></use></svg>
          <ol class="breadcrumb">
            <li><a href="/rk/v1/tv/application"><span itemprop="name">Application</span></a></li>
            <li>/</li>
            <li><span itemprop="name">Entry</span></li>
          </ol>
        </div>
      </div>
      <!--- content --->
      <article class="gdoc-markdown">
        <!--- title --->
        <div class="gdoc-page__anchorwrap">
          <h1 id="entry"> Entry </h1>
          <p>List of entries started while bootstrapping rk application.</p>
        </div>
        <!--- content --->
        <div class="gdoc-markdown">
          {{ range $entryType, $entryList := .Entries }}
          <div class="gdoc-page__anchorwrap"><h2>{{ $entryType }}</h2></div>
          <hr>
          {{ range . }}
          <div class="gdoc-page__anchorwrap"><h3>{{ .EntryName }}</h3></div>
          <blockquote class="gdoc-hint info">
            <!--- entry name, type and description --->
            <table>
              <thead>
                <tr>
                  <th>Entry Name</th>
                  <th>Entry Type</th>
                  <th>Description</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>{{ .EntryName }}</td>
                  <td>{{ .EntryType }}</td>
                  <td>{{ .EntryDescription }}</td>
                </tr>
              </tbody>
            </table>
          </blockquote>
          <div class="gdoc-tabs">
            <input type="radio" class="gdoc-tabs__control hidden" name="tab-{{ .EntryName }}" id="tab-{{ .EntryName }}-0" checked="checked">
            <label for="tab-{{ .EntryName }}-0" class="gdoc-tabs__label"> YAML </label>
            <div class="gdoc-markdown--nested gdoc-tabs__content">
              <pre class="prettyprint yaml" id="{{ .EntryName }}-yaml">
                <code class="language-YAML" data-lang="YAML"></code>
                <script>
                  var pretty = '<code class="language-yaml hljs" data-lang="YAML">'+json2yaml({{ .EntryMeta }})+'</code>'
                  document.getElementById("{{ .EntryName }}-yaml").innerHTML = pretty;
                </script></pre>
            </div>
            <input type="radio" class="gdoc-tabs__control hidden" name="tab-{{ .EntryName }}" id="tab-{{ .EntryName }}-1">
            <label for="tab-{{ .EntryName }}-1" class="gdoc-tabs__label"> JSON </label>
            <div class="gdoc-markdown--nested gdoc-tabs__content">
              <pre class="prettyprint" id="{{ .EntryName }}-json">
                <script>
                  var pretty = '<code class="language-JSON" data-lang="JSON">'+prettyPrintJson.toHtml({{ .EntryMeta }})+'</code>'
                  document.getElementById("{{ .EntryName }}-json").innerHTML = pretty;
                </script></pre>
            </div>
          </div>
          <br>
          {{ end }}
        {{ end }}
        <br>
        </div>
      </article>
    </div>
  </main>
  {{template "footer"}}
</div>
</body>
</html>
{{end}}